		</table>
    </section>
</div>
{% if is_granted('ROLE_ADMIN') %}
<a href="{{path('add_book')}}" class="mt-2 mb-4 btn btn-success">Ajouter un livre</a>
{% endif %}
<a href="{{path('home')}}" class="mt-2 mb-4 btn btn-success">Retour page Accueil</a>

{% endblock %}
